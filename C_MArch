#include <stdio.h>

void sum(int *arr, int size, int *sum);
void avrg(float *arr, int size, float *avrg);
int  main(){
	int size = 2;
	float array[size];
	array[0] = 5.8;
	array[1] = 6.7;
	array[2] = 1.3;
	float average=0; 
	printf("%f\n",average);
	//sum(array,size,&result);
	avrg(array,size,&average); 
}

void sum(int *arr, int size, int *sum){
	for(int i=0;i<=size;i++)
	{
		*sum += arr[i];
		  
	}
	printf("%d",*sum);

}

void avrg(float *arr, int size, float *avrg){
	float sum = 0;
	for(int i=0;i<=size;i++)
	{
		sum += arr[i];
		
	}
	float result = sum/size;
	printf("%f\n",result);
}
